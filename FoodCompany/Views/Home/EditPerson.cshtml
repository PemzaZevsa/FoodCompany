@model Person;

<form method="post" class="row">
    <div class="border p-3 mt-4">
        
        <div class="row pb-2">
            <h2>Змінити картку фізичної особи</h2>
            <hr />
        </div>
        
        <div asp-validation-summary="All"></div>

        <div class="mb-3 row p-1">
            <label asp-for="Surname" class="p-0"></label>
            <input asp-for="Surname" class="form-control" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="PhoneNumber" class="p-0"></label>
            <input asp-for="PhoneNumber" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Email" class="p-0"></label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Address" class="p-0"></label>
            <input asp-for="Address" class="form-control" />
        </div>
        <div class="row pt-2">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-dark form-control">Змінити</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Home" asp-action="ListPerson" class="btn btn-outline-dark border form-control">
                    До списку осіб
                </a>
            </div>
        </div>
    </div>
</form>