@using FoodCompany.DataTransferObjects;
@model UserDto;
@{
	ViewData["Title"] = "Login";
}

<div class="container d-flex justify-content-center align-items-center min-vh-25">
    <form asp-action="LoginPost" class="w-100" style="max-width: 400px;">
        @Html.HiddenFor(userDto => userDto.ReturnUrl)

        <h3 class="text-start mb-4">Вхід</h3>

        <div class="mb-3">
            <label for="Login" class="form-label">Логін</label>
            <input asp-for="Login" class="form-control" placeholder="Введіть логін" />
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Password" class="form-label">Пароль</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Введіть пароль" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-dark text-white">Вхід</button>
        </div>
    </form>
</div>
